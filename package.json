{
  "name": "xm-charts",
  "version": "1.0.68",
  "scripts": {
    "start": "webpack-dashboard --port 9001 --minimal -- npm run dev",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open",
    "prod": "cross-env NODE_ENV=production webpack --progress --display-error-details",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "jest --coverage",
    "build:bitballoon": "npm --no-git-tag-version version patch && npm run prod && node bitballoon",
    "bitballoon": "node bitballoon.js",
    "bump": "npm version patch --no-git-tag-version && git add package.json"
  },
  "dependencies": {
    "airbnb-prop-types": "^2.5.2",
    "babel-plugin-react-css-modules": "^2.2.0",
    "babel-polyfill": "^6.23.0",
    "chance": "^1.0.6",
    "d3": "^4.7.3",
    "lorem-ipsum": "^1.0.3",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router-dom": "^4.0.0-beta.6",
    "recompose": "^0.22.0",
    "throttle-debounce": "^1.0.1"
  },
  "pre-commit": [
    "bump"
  ],
  "devDependencies": {
    "autoprefixer": "^6.7.5",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-flow-react-proptypes": "^0.21.0",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "bitballoon": "^0.2.2",
    "clean-webpack-plugin": "^0.1.15",
    "concurrently": "^3.3.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "enzyme-to-json": "^1.5.0",
    "eslint": "^3.16.1",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "2.0.0-rc.3",
    "file-loader": "^0.10.1",
    "flow": "^0.2.3",
    "flow-bin": "^0.39.0",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "node-sass": "^4.5.0",
    "postcss-inline-comment": "^3.0.0",
    "postcss-scss": "^0.4.1",
    "pre-commit": "^1.2.2",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "3.0.0-beta.6",
    "rxjs": "^5.3.0",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.1",
    "svgo": "^0.7.2",
    "url-loader": "^0.5.8",
    "webpack": "2",
    "webpack-dashboard": "^0.3.0",
    "webpack-dev-server": "2",
    "webpack-merge": "^3.0.0",
    "webpack-node-externals": "^1.5.4",
    "yaml-loader": "^0.4.0"
  },
  "jest": {
    "setupFiles": [
      "./jest.setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy"
    },
    "snapshotSerializers": [
      "./node_modules/enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
